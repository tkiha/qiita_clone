.item-show-header
  .container
    .row
      .col-sm-9
        %h1.item-show-header-title= @item.title
        %ul.list-inline.item-show-header-tags
          - @item.tags.each do |tag|
            %li.item-show-header-tags-list
              = link_to tag.name, tag, class: 'small'
        %p.item-show-header-time
          = link_to @item.user.name, @item.user
          が
          %time
            = @item.created_at.to_s
          に投稿
      .col-sm-3
        %ul.list-group
          %li.list-group-item
            %span.badge#stock-num= @item.stocks.length
            ストック
          %li.list-group-item
            %span.badge= @item.comments.length
            コメント
        - if current_user == @item.user
          = link_to '編集する', edit_item_path(@item), class: 'btn btn-info btn-block'
        - else
          %span#stock-btn= item_stock_link_to(@item)
.container
  .row
    .col-sm-9
      = markdown_to_html @item.content

      %hr

      - @item.comments.each do |comment|
        .panel.panel-default
          .panel-heading
            = link_to comment.user.name, comment.user
            %time.pull-right
              %small.text-muted
                = comment.created_at.to_s
          .panel-body= markdown_to_html comment.content

      = render 'form_comment', comment: @comment, item: @item
    .col-sm-3
      %section
        .item-user
          %strong
            = link_to @item.user.name, @item.user
      %section
        %strong
          人気の投稿
        %ul
        - @item.user.items.limit(10).each do |item|
          %li
            = link_to item.title, item

