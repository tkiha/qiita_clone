= simple_form_for comment, url: item_comments_path(item), html: {class: 'form-horizontal'} do |f|
  - if comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(comment.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - comment.errors.full_messages.each do |msg|
          %li= msg

  = f.input :content, input_html: {rows: '5'}
  = f.button :submit

