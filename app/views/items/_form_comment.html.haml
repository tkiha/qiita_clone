= simple_form_for comment, url: item_comments_path(item) do |f|
  - if comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(comment.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - comment.errors.full_messages.each do |msg|
          %li= msg

  = f.input :content, input_html: {rows: '5'}, label: 'コメント'
  = f.button :submit, '投稿する', class: 'btn btn-success pull-right'
