= simple_form_for @item, html: {class: 'form-horizontal'} do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  = f.input :title
  = f.input :content, input_html: {rows: '20'}
  = f.button :submit

