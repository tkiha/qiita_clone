= simple_form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  = f.input :title
  - @item.build_tags
  = f.fields_for :tags do |tag_field|
    = tag_field.input :name, label: 'タグ'
  = f.input :content, input_html: {rows: '20'}
  = f.button :submit

