  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{type: "button", "data-toggle" => "collapse", "data-target" => "#logged-in-menu", "aria-expanded" => "false"}
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Qiita', root_path, class: 'navbar-brand'
