%h2
  Login

= form_for :session, url: login_path, html: {class: 'form-horizontal'} do |f|

  .form-group
    = f.label :email, class: 'control-label col-sm-2'
    .col-sm-10
      = f.email_field :email, class: 'form-control', placeholder: 'email', required: true

  .form-group
    = f.label :password, class: 'control-label col-sm-2'
    .col-sm-10
      = f.password_field :password, class: 'form-control', placeholder: 'password', required: true

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'ログイン', class: 'btn btn-primary btn-block'

